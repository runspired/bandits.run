# Cloudflare Pages headers configuration for SEO and caching

# All HTML pages - ensure they're crawlable
/*
  X-Robots-Tag: all
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# Cache static assets aggressively
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

/images/*
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Cache JS and CSS with long-term caching (Vite adds hashes to filenames)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# API responses - cache but revalidate
/api/*
  Cache-Control: public, max-age=3600, must-revalidate

# Service worker and manifest - short cache
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

/manifest.webmanifest
  Cache-Control: public, max-age=3600, must-revalidate

# Map styles and tiles
/map-styles/*
  Cache-Control: public, max-age=86400, must-revalidate
