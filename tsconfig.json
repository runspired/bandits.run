{
  "extends": "@ember/app-tsconfig",
  "include": ["app", "tests", "types"],
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"]
  },
  "compilerOptions": {
    "allowJs": true,
    "paths": {
      "bandits-web/tests/*": ["./tests/*"],
      "bandits-web/*": ["./app/*"],
      "*": ["./types/*"]
    },
    "types": ["ember-source/types", "@embroider/core/virtual", "vite/client"]
  }
}
