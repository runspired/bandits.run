{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Node.js environment
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2023"],

    // Enable Node.js types
    "types": ["node"],

    // Strict type checking
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    // Output configuration
    "noEmit": true,

    // Path mapping (remove Ember-specific paths)
    "paths": {}
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
